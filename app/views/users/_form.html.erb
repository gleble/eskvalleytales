<%= form_for @user, :html => {:multipart => true} do |f| %>


  <div class="field">
    <%= f.label :login %><br />
    <%= f.text_field :login %>
  </div>
  <div class="field">
    <%= f.label :email %><br />
    <%= f.text_field :email %>
  </div>
  <div class="field">
    <%= f.label :password %><br />
    <%= f.text_field :password %>
  </div>
  <p>
  <%= f.file_field :photo %>
</p>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
